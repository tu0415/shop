page {
  height: 100%;
}
page .loginModal {
  top: 0;
  left: 0;
  position: fixed;
  width: 100%;
  height: 100vh;
  z-index: 333;
}
page .loginModal .count-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
}
page .loginModal .count-box .count {
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 40rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 111;
  background-color: #fff;
  border-radius: 20rpx;
}
page .loginModal .count-box .count .nologin {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
}
page .loginModal .count-box .count .txt {
  font-size: 28rpx;
  margin-top: 20rpx;
}
page .loginModal .count-box .count .btn-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}
page .loginModal .count-box .count .btn-box .btn {
  width: 200rpx;
  height: 80rpx;
  background-color: #cdcdcd;
  color: #fff;
  border-radius: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
page .loginModal .count-box .count .btn-box .userInfo-btn {
  margin-left: 40rpx;
  background-color: #FFD02B;
  color: #333;
}
page .loginModal .count-box .count .txt {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
